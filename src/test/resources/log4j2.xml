<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">
    <Appenders>

        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <RollingFile name="test.log" fileName="generatedFromTest/test.log"
              append="true" immediateFlush="false" filePattern="generatedFromTest/$${date:yyyy-MM}/%d{MM-dd-yyyy}-%i-test.log">
            <PatternLayout pattern="%d %-5p [%t] %c (%F:%L) - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="test.log" />
            <AppenderRef ref="CONSOLE"/>
        </Root>

        <Logger name="test.net.util" level="TRACE" />
    </Loggers>
</Configuration>